<Window x:Class="AutoGarmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGarmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="493.5" Width="693">
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="StackPanelMenu" Margin="0" Background="#FF676767"/>
        <StackPanel x:Name="StackPanelDevices" Margin="0" Background="White" Grid.Column="2"/>
        <ScrollViewer Margin="0" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StackPanelSidebar" Margin="0" Background="#FFF2F2F2"/>
        </ScrollViewer>

    </Grid>
</Window>
