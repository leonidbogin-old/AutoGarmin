                            <TextBlock Text="{Binding DisplayNameWithSize}" ToolTip="{Binding DisplayDate}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <Button Command="{Binding DataContext.DeleteItemCommand, ElementName=MyListBoxName}" 
                                CommandParameter="{Binding ''}" Width="15" Height="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Background="Red" BorderBrush="{x:Null}" Foreground="{x:Null}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                -->
            <!--<ListBoxItem Content="zal.kmz (2,5 Мб)" FontFamily="Calibri" ToolTip="23:00 12.10.2019"/>-->
            <!--
            </ListBox>-->
            <Label Content="Файлы для залития" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Calibri" Padding="3,2,3,1" BorderBrush="#FFABADB3" BorderThickness="1,1,1,0" Background="#FFEBEBEB" FontSize="11" Foreground="Black" Margin="0"/>
            <DataGrid x:Name="DataGridFiles" Margin="0,17,0,0" Background="#FFF2F2F2" BorderBrush="#FFABADB3" BorderThickness="1" HeadersVisibility="None" FontFamily="Calibri" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" HorizontalGridLinesBrush="#FFE0E0E0" VerticalGridLinesBrush="#FFE0E0E0" GridLinesVisibility="Horizontal" SelectionMode="Single" MinRowHeight="14" CanUserResizeRows="False" EnableRowVirtualization="False" IsReadOnly="True" SelectedCellsChanged="DataGridFiles_SelectedCellsChanged_1">
                <DataGrid.Columns>
                    <DataGridTextColumn CanUserResize="False" Binding="{Binding DisplayName}" Header="Имя файла" Width="*"/>
                    <DataGridTextColumn CanUserResize="False" Binding="{Binding DisplaySize}" Header="Размер файла" Width="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn CanUserResize="False" Header="Закрыть" Width="20">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image MouseDown="DataGridDelete" Source="../Images/delete.png" Visibility="{Binding DisplayClose}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <Label Content="Заливать карты" Margin="0,0,5,0" Grid.Row="2" VerticalAlignment="Center" FontFamily="Calibri" Height="24" HorizontalAlignment="Right" Width="89"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="130" IsSynchronizedWithCurrentItem="False" Height="22" MinHeight="22">
            <ComboBoxItem Content="Нет"/>
            <Separator Margin="0,1"/>
            <ComboBoxItem Content="Перезалить"/>
            <ComboBoxItem Content="Дозалить"/>
        </ComboBox>

    </Grid>
</UserControl>
