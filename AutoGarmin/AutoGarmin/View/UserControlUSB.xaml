<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoGarmin.View"
             xmlns:AutoGarmin="clr-namespace:AutoGarmin" x:Class="AutoGarmin.View.UserControlUSB"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="270">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button Content="Остановить USB-скрипт" Margin="0" Grid.Row="1" FontFamily="Calibri" FontSize="14" Background="#FF4283DE" Foreground="White" BorderThickness="0"/>
        <ScrollViewer Margin="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0" Width="270">
                <AutoGarmin:UserControlTracks Height="Auto" Margin="0" Width="Auto"/>
                <local:UserControlMaps Height="Auto" Margin="0" Width="Auto"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
